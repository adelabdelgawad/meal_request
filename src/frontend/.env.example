# Backend API Configuration
# This is where the Next.js frontend will send authentication requests
#
# Development (local backend on port 8000):
BACKEND_API_URL=http://localhost:8000

# API Version (used for versioned endpoints)
# Examples: v1, v2, v3
API_VERSION=v1

# Or use the public version if backend is on different machine:
# BACKEND_API_URL=http://192.168.1.100:8000

# Production example:
# BACKEND_API_URL=https://api.example.com
# API_VERSION=v1

# =============================================================================
# Data Polling Intervals (in milliseconds)
# =============================================================================
# Controls how frequently data tables auto-refresh via SWR
# Set to 0 to disable auto-refresh for a specific table
#
# Common values:
# - 30000  = 30 seconds (good for real-time data)
# - 60000  = 1 minute (balanced)
# - 300000 = 5 minutes (low frequency)
# - 0      = disabled (manual refresh only)

# Requests table polling interval (default: 30000ms = 30 seconds)
# Used for meal request list on page 1
NEXT_PUBLIC_REQUESTS_POLL_INTERVAL=30000

# Analysis table polling interval (default: 60000ms = 1 minute)
# Used for request analysis and statistics
NEXT_PUBLIC_ANALYSIS_POLL_INTERVAL=60000

# My requests/history table polling interval (default: 60000ms = 1 minute)
# Used for user's personal request history
NEXT_PUBLIC_HISTORY_POLL_INTERVAL=60000

# Scheduler jobs polling interval (default: 3000ms = 3 seconds)
# Only polls when there are pending/running jobs
NEXT_PUBLIC_SCHEDULER_POLL_INTERVAL=3000
