# ==============================================================================
# MariaDB/MySQL Database Configuration - TEMPLATE
# ==============================================================================
# Copy this file to .env.database and update with your values
# ==============================================================================

# Root password for MySQL (CHANGE IN PRODUCTION!)
MYSQL_ROOT_PASSWORD=CHANGE_ME

# Database name
MYSQL_DATABASE=meal_request_db

# Application database user
MYSQL_USER=meal_user

# Application database password (CHANGE IN PRODUCTION!)
MYSQL_PASSWORD=CHANGE_ME

# Character set configuration
MYSQL_CHARACTER_SET_SERVER=utf8mb4
MYSQL_COLLATION_SERVER=utf8mb4_unicode_ci

# Performance tuning
MYSQL_MAX_CONNECTIONS=200
MYSQL_INNODB_BUFFER_POOL_SIZE=256M
MYSQL_INNODB_LOG_FILE_SIZE=64M
