# ==============================================================================
# Grafana Configuration - TEMPLATE
# ==============================================================================
# Copy this file to .env.grafana and update with your values
# ==============================================================================

# Admin credentials (CHANGE IN PRODUCTION!)
GF_SECURITY_ADMIN_USER=admin
GF_SECURITY_ADMIN_PASSWORD=CHANGE_ME_IN_PRODUCTION

# Security settings
GF_USERS_ALLOW_SIGN_UP=false
GF_AUTH_ANONYMOUS_ENABLED=false

# Server settings
GF_SERVER_ROOT_URL=http://localhost:3001
GF_SERVER_SERVE_FROM_SUB_PATH=false

# Datasource proxy settings
GF_DATAPROXY_TIMEOUT=60
GF_DATAPROXY_DIAL_TIMEOUT=30

# Logging
GF_LOG_LEVEL=info
